<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    >

    <GridLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2"
        android:layout_centerHorizontal="true"
        tools:context=".AddItemActivity">

        <LinearLayout
            android:orientation="vertical"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_columnSpan="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/activity_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/addItem_activityTitle"
                android:textColor="@android:color/black"
                android:textSize="@dimen/addItem_activityTextSize"
                android:textStyle="bold"
                android:layout_columnSpan="2"
                android:layout_row="0"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>

        <TextView
            android:id="@+id/foodName_label"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/foodName_label"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="@dimen/add_item_textsize"
            android:layout_gravity="end"
            android:paddingVertical="@dimen/add_item_textpadding"
            />

        <EditText
            android:id="@+id/foodName_editText"
            android:inputType="text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="1"
            android:paddingVertical="@dimen/add_item_viewPadding"
            android:layout_gravity="fill_horizontal"/>


        <TextView
            android:id="@+id/foodDesc_label"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/foodDesc_label"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="@dimen/add_item_textsize"
            android:layout_gravity="end"
            android:paddingVertical="@dimen/add_item_viewPadding"/>

        <EditText
            android:id="@+id/foodDesc_editText"
            android:inputType="text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="2"
            android:paddingVertical="@dimen/add_item_viewPadding"
            android:layout_gravity="fill_horizontal"/>

        <TextView
            android:id="@+id/ingredients_label"
            android:layout_column="0"
            android:layout_row="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ingredients_label"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="@dimen/add_item_textsize"
            android:layout_gravity="end"
            android:paddingVertical="@dimen/add_item_viewPadding"
            />

        <EditText
            android:id="@+id/ingredients_editText"
            android:inputType="text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="3"
            android:paddingVertical="@dimen/add_item_viewPadding"
            android:layout_gravity="fill_horizontal"/>

        <TextView
            android:id="@+id/calories_label"
            android:layout_column="0"
            android:layout_row="4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/calories_label"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="@dimen/add_item_textsize"
            android:layout_gravity="end"
            android:paddingVertical="@dimen/add_item_viewPadding"
            />

        <EditText
            android:id="@+id/calories_editText"
            android:inputType="number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="4"
            android:paddingVertical="@dimen/add_item_viewPadding"
            android:layout_gravity="fill_horizontal"/>

        <TextView
            android:id="@+id/recipe_label"
            android:layout_column="0"
            android:layout_row="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/recipe_label"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="@dimen/add_item_textsize"
            android:layout_gravity="end"
            android:paddingVertical="@dimen/add_item_viewPadding"/>

        <EditText
            android:id="@+id/recipe_editText"
            android:inputType="text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="5"
            android:paddingVertical="@dimen/add_item_viewPadding"
            android:layout_gravity="fill_horizontal"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_column="0"
            android:layout_row="6"
            android:layout_columnSpan="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/submit_button"
                android:onClick="createNewItem"
                android:layout_gravity="center_horizontal"
                android:text="@string/submit_button"
                android:textSize="@dimen/add_item_textsize"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
    </GridLayout>
</ScrollView>